<h3>
  <%= @post.title %>
</h3>

<p>
  <%= @post.body %>
</p>

<h4>
  by: <%= "#{@post.user.last_name}, #{@post.user.first_name}" %>
</h4>

<div>
  <% if @post.user == @user %>
    <%= link_to "Edit this post", edit_post_path(@post) %> |
  <% end %>
  <%= link_to "Back to posts", root_path %>

  <% if @post.user == @user %>
    <%= button_to "Destroy this post", @post, method: :delete %>
  <% end %>
</div>
